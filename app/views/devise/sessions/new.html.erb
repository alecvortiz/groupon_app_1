<style>
  body {
    background-color: white;
  }

  .sign_in{
    float:center;
    background-color: rgba(255, 255, 255, .9);
    display: block;
    margin:auto;
    border-radius: 20px;
    border-width: 20px;
    font-family: Open Sans;
    text-align: center;
   
  }

  .grouppraisal{
    color:rgba(91, 201, 124, 1); 
    font-family: 'Roboto-Bold'; 
    font-size: 35px;
    text-align: center;


  }

  .field{
    font-size: 18px;
    color: black;
  
  }
  .logo {
    padding-top: 25pt;
    padding-bottom: 25pt;
    float: center;
    text-align: center;

  }

</style>

<body>

  <div class="container">
    <div class="logo">
    <img src="../img/icon.jpg" width='250px'></div>
    
    <div class="grouppraisal">Welcome to Grouppraisal.</div><br>

    <div class="row vertical-center-row">
      <div class="col-md-12">
        <div class="sign_in">

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, :placeholder => 'Email', autofocus: true %>
            </div>
            <br>
            <div class="field">
              <%= f.password_field :password, :placeholder => 'Password', autocomplete: "off" %>
            </div>
            <br>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div><br>
            <% end -%>

            <div class="actions" style="padding-bottom:30px">
              <b><%= f.submit "Login", class: "btn btn-default btn-md" %></b>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
