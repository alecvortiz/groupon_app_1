


<h1>Groupon SA Roster, <%= @count %> more appraisals to fill out</h1>
<%= button_to 'New Quarter', reset_user_path, class: "btn btn-success",  :method => :get %>
<br/><br/>


<%= form_tag(users_path, :method => "get", id: "search-form") do %>
    <b/>Search by Name or Job Title: <br />
    <%= text_field_tag :search, params[:search], placeholder: "Search" %>
    <%= submit_tag "Search" %>
<% end %>


<br/><br/><br/>


<% @users.each do |user| %>
	
		<p class ="roster" ><% name = user.first_name + " " + user.last_name %>
		<a class ="people"><%= link_to name, user_path(user) %></a> - <font color=#1F221F><%= user.job_title %></font>
		<% if user.check == true %></a>
			<i class="fa fa-check-square-o" style="color:#82b548"></i> 
		<% end %>
		</p>
	
	

<% end %>

