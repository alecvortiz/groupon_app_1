<body><br><br><br><br>
  <h1>Add New Employee</h1>



  <%= simple_form_for @user, url: create_user_path do |f| %>

  <% if @user.errors.any? %>
  <div class="alert alert-error alert-block"><button aria-hidden="true" class="close" data-dismiss="alert" type="button">Ã—</button>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <%= content_tag :li, msg, :id => "error_#{msg}" if msg.is_a?(String) %>
      <% end %>
    </ul>
  </div>
<% end %>

 <div class="col-lg-12">
      <br>
      <div class="row">
         <div class="col-md-4 col-md-offset-4 text-left">
            <%= f.label :first_name, class: "col-sm-6 control-label" %>
            <div class="col-sm-6">
               <%= f.text_field :first_name, placeholder: "First Name", autocomplete: "off", class: "form-control" %>
            </div>
         </div>
      </div>
   </div>
   <div class="col-lg-12">
      <br>
      <div class="row">
         <div class="col-md-4 col-md-offset-4 text-left">
            <%= f.label :last_name, class: "col-sm-6 control-label" %>
            <div class="col-sm-6">
               <%= f.text_field :last_name, placeholder: "Last Name", autocomplete: "off", class: "form-control" %>
            </div>
         </div>
      </div>
   </div>
    

 <div class="col-lg-12">
      <br>
      <div class="row">
         <div class="col-md-4 col-md-offset-4 text-left">
          <%= f.label :job_title, class: "col-sm-6 control-label" %>
            <div class="col-sm-6">
      <%= f.select :job_title, titles: ['Business Intelligence', 'Cape Town Sales Manager',  'Cape Town Sales', 'CEO', 'City Planner', 'City Planner Manager', 'CS', 'CS Manager', 'CS Team Leader', 'Durban Sales', 'Durban City Manager', 'Editorial', 'Editorial Manager', 'Finance', 'Finance Manager', 'Goods Administrator', 'Goods Manager', 'Goods Sales', 'HR Manager', 'Johannesburg Sales', 'Logistics', 'Logistics Manager', 'Pretoria Sales', 'Pretoria Sales Manager', 'Product Designer', 'PRM', 'PRM Manager', 'QA', 'Sales Manager', 'Strategic Accounts', 'Telesales', 'Telesales Manager', 'Travel', 'Business Intelligence Manager', 'Marketing Associate', 'Marketing Manager', 'Johannesburg Sales Manager', 'Strategic Accounts Manager', 'HR Trainer', 'HR Administrator'], placeholder: "Job Title" %>
  </div>
         </div>
      </div>
   </div>

     <div class="col-lg-12">
      <br>
      <div class="row">
         <div class="col-md-4 col-md-offset-4 text-left">
            <%= f.label :email, class: "col-sm-6 control-label" %>
            <div class="col-sm-6">
               <%= f.text_field :email, placeholder: "Email", autocomplete: "off", class: "form-control" %>
            </div>
         </div>
      </div>
   </div>

   <div class="col-lg-12">
      <br>
      <div class="row">
      <%= f.input :role, as: :string, label: "Check box to make admin:" do %>
        <%= f.check_box :role, {}, "admin", "employee" %>
      <% end %>
    </div>
 </div>


    <br>

    <div class="col-lg-12">
   <br>
      <%= f.button :submit, "Add Employee", :class=>"btn btn-success form-sub-2" %>
    </div>
    <% end %>

  </body>

